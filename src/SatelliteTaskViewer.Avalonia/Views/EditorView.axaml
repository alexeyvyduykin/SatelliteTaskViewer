<UserControl x:Class="SatelliteTaskViewer.Avalonia.Views.EditorView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Editors="clr-namespace:SatelliteTaskViewer.Avalonia.Views.Editors"             
             mc:Ignorable="d"        
             d:DesignWidth="1200" d:DesignHeight="580">

  <Grid ColumnDefinitions="*,250" RowDefinitions="2*,3*,300">

    <Grid RowDefinitions="Auto,*" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
      <Editors:SceneTimerEditor Grid.Row="0" Width="460" Margin="1"
                                DataContext="{Binding Project.CurrentScenario.SceneTimerEditor}"/>

      <Editors:Viewport3DEditor Grid.Row="1" Margin="1" />
    </Grid>


    <Editors:TimelineEditor Grid.Column="0" Grid.Row="2" Margin="1"
                            DataContext="{Binding Project.CurrentScenario}"/>

    <Editors:OutlinerEditor Grid.Column="1" Grid.Row="0" Margin="1"
                              DataContext="{Binding Project.CurrentScenario.OutlinerEditor}"/>

    <Editors:TaskListEditor Grid.Column="1" Grid.Row="1" Margin="1"
                            Grid.RowSpan="2"
                            DataContext="{Binding Project.CurrentScenario.TaskListEditor}" />
  </Grid>
    
</UserControl>
