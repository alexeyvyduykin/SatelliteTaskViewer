    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->

          <StackPanel>
            <ToggleButton Classes="IsVisible"/>
            <ToggleButton Classes="IsFrameVisible"/>
            <DockPanel>            
              <RadioButton Classes="IsCameraTarget" GroupName="g1"/>           
              <RadioButton Classes="IsCameraTarget" GroupName="g1"/>            
              <RadioButton Classes="IsCameraTarget" GroupName="g1"/>
            </DockPanel>      
            <ToggleButton Classes="IsOrbitVisible"/>            
          </StackPanel>
          
        </Border>
